<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.llisovichok.models">
    <class name="Message" table="MESSAGE_T">
        <meta attribute="class-description">
            This class contains the user's message detail.
        </meta>
        <id name="id" type="java.lang.Integer" column="id">
            <generator class="sequence"/>
        </id>
        <property name="text" column="text" type="string"/>
        <many-to-one name="user" column="user_id" class="com.llisovichok.models.User" cascade="all"/>
    </class>

</hibernate-mapping>
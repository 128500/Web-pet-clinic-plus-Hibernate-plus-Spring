<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.llisovichok.lessons.clinic">
    <class name="Client" table="CLIENTS_T">
        <meta attribute="class-description">
            This class contains the user detail.
        </meta>
        <id name="id" type="java.lang.Integer" column="user_id">
            <generator class="sequence"/>
        </id>
        <discriminator column="type" type="java.lang.String"/>
        <property name="firstName" column="first_name" type="string"/>
        <property name="lastName" column="last_name" type="string"/>
        <property name="address" column="address" type="string"/>
        <property name="phoneNumber" column="phone" type="java.lang.Long"/>

        <many-to-one name="pet" column="id_pet" unique="true" cascade="all-delete-orphan" fetch="join"/>
    </class>

    <subclass name="com.llisovichok.models.User" extends="com.llisovichok.lessons.clinic.Client">
        <many-to-one name="role" column="id_role" unique="true" cascade="all-delete-orphan" fetch="join"/>
        <set name="messages" table="message_t" lazy="false" cascade="all-delete-orphan">
            <key column="user_id" not-null="true"/>
            <one-to-many class="com.llisovichok.models.Message"/>
        </set>
    </subclass>

    <class name="com.llisovichok.lessons.clinic.Pet" table="PETS_T">
        <meta attribute="class-description">
            This class contains the pet detail.
        </meta>
        <id name="id" type="java.lang.Integer" column="pet_id">
            <generator class="sequence"/>
        </id>
        <property name="name" column="nickname" type="string"/>
        <property name="kind" column="kind" type="string"/>
        <property name="age" column="age" type="java.lang.Integer"/>
        <many-to-one
                name="photo"
                class="com.llisovichok.lessons.clinic.PetPhoto"
                cascade="all-delete-orphan"
                column="id_pet_photo"
                unique="true"
                fetch="join"
                not-found="ignore"
        />
    </class>
</hibernate-mapping>